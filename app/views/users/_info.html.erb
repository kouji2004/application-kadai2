<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>


  <% if @users_relationship.exists? %>
    <table>
      <tbody>
        <tr>
          <td>follows:<%=link_to user.followings.count, user_followings_path(user.id) %></td>
          <td>followers: <%=link_to user.followers.count, user_followers_path(user.id) %></td>
        </tr>
        <tr>
          <% if current_user.following?(user) %>
            <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
          <% else %>
            <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
          <% end %>
        </tr>
      </tbody>
    </table>

<% else %>
  <p>ユーザーはいません</p>
<% end %>

</table>

  <div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>